<Page x:Class="VKR.Glpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VKR"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Glpage">

    <Grid>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="20"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Top" >
            <MenuItem x:Name="pr" Header="Профиль" Margin="5,0,0,0" Click="pr_Click" />
            <MenuItem x:Name="d" Header="Документы" Margin="5,0,0,0" Click="d_Click" />
            <MenuItem x:Name="teg" Header="Список тегов" Margin="5,0,0,0" Click="teg_Click" />            
            <MenuItem x:Name="tip" Header="Типы файлов" Margin="5,0,0,0" Click="tip_Click" />
            <MenuItem x:Name="sot" Header="Сотрудники" Margin="5,0,0,0" Click="sot_Click" />
            <MenuItem Header="Выход"  Margin="5,0,0,0" Click="MenuItem_Click"/>
        </Menu>

        <Frame x:Name="Fr" Source="Profil.xaml"  NavigationUIVisibility="Hidden" Grid.Row="2" Margin="5,4,5,5"/>
    </Grid>
</Page>
